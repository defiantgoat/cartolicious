{
  "name": "cartolicious",
  "version": "1.0.0",
  "description": "Cartolicious. A cartographic art tool",
  "main": "index.js",
  "repository": "https://github.com/defiantgoat/cartolicious.git",
  "author": "defiantgoat <defiantgoat@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '*/**/*.{ts,tsx}'",
    "format": "yarn prettier --write .",
    "test": "DEBUG_PRINT_LIMIT=20000 jest --runInBand --detectOpenHandles --config jest.config.json",
    "deploy": "yarn run build-production && yarn run build-docker-image",
    "develop": "yarn run build-development && yarn run launch-development",
    "build-development": "rm -rf dist_dev && webpack --mode development --config webpack.server.config.js && webpack --mode development --config webpack.dev.config.js",
    "launch-development": "NODE_ENV=development PORT=8080 node ./dist_dev/server.js",
    "build-production": "rm -rf dist_prod && webpack --mode production --config webpack.server.config.js && webpack --mode production --config webpack.prod.config.js",
    "launch-production": "node ./dist_prod/server.js",
    "build-docker-image": "docker build -t defiantgoat/cartolicious-client .",
    "view-coverage-report": "open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@licious/react": "^0.0.15",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "crypto-js": "^4.0.0",
    "express": "^4.18.2",
    "firebase": "^11.1.0",
    "jwt-decode": "^3.1.2",
    "normalize.css": "^8.0.1",
    "oidc-client": "^1.10.1",
    "ol": "^7.2.2",
    "pbf": "^3.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^18.14.2",
    "@types/ol": "^7.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-redux": "^7.1.25",
    "@types/uuid": "^9.0.1",
    "@types/webpack-dev-middleware": "^5.3.0",
    "@types/webpack-hot-middleware": "^2.25.6",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-jest": "^29.4.3",
    "css-loader": "^6.7.3",
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jest-canvas-mock": "^2.4.0",
    "prettier": "2.8.4",
    "sass-loader": "^13.2.0",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-middleware": "^6.0.1",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-node-externals": "^3.0.0"
  }
}
