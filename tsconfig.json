{    
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/server/server-prod.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
  ]
}
